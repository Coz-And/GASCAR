@page "/admin"
@using GASCAR.Web.Services
@inject AuthStateService AuthState
@inject NavigationManager Navigation

@if (!AuthState.IsAuthenticated)
{
    <div class="text-center mt-5">
        <h4>Accesso richiesto</h4>
        <a href="/login" class="btn btn-primary">Accedi</a>
    </div>
}
else
{
    <div class="container mt-4">
        <h2 class="mb-4">Area Amministratore</h2>
        <div class="mb-4">
            <h5>Informazioni Admin</h5>
            <ul class="list-group">
                <li class="list-group-item"><strong>Username:</strong> @AuthState?.Username</li>
                <li class="list-group-item"><strong>Ruolo:</strong> @AuthState?.UserRole</li>
                <!-- Aggiungi altre info admin se disponibili -->
            </ul>
        </div>
        <div class="mb-4">
            <a href="/admin/edit-profile" class="btn btn-primary me-2">Modifica dati admin</a>
            <button @onclick="Logout" class="btn btn-danger">Logout</button>
        </div>
        <div class="mb-4">
            <a href="/admin/stations" class="btn btn-outline-secondary me-2">Gestisci Colonnine</a>
            <a href="/admin/transactions" class="btn btn-outline-secondary me-2">Transazioni</a>
        </div>
    </div>
}

@code {
    private void Logout()
    {
        AuthState.Logout();
        Navigation.NavigateTo("/");
    }
}
@page "/map"
@using GASCAR.Web.Services
@using GASCAR.Web.Models
@inject AuthStateService AuthState
@inject ApiService Api
@inject NavigationManager Navigation
@if (!AuthState.IsAuthenticated)
{
    <div class="text-center mt-5">
        <h4>Accesso richiesto</h4>
        <a href="/login" class="btn btn-primary">Accedi</a>
    </div>
}
else
{
    <div class="container mt-4">
        <h2 class="mb-4">Mappa Colonnine di Ricarica</h2>
        <div class="alert alert-info">
            <strong>Nota:</strong> La mappa sottostante utilizza Google Maps. Le colonnine sono mostrate come marker.
        </div>
        <div id="googleMap" style="height: 500px; width: 100%; border: 1px solid #dee2e6; border-radius: 0.375rem;"></div>
        @if (currentCharging != null)
        {
            <div class="alert alert-success">
                <strong>Hai una ricarica attiva!</strong><br />
                Colonnina prenotata: @currentCharging.StationId<br />
                Fine stimata: @(currentCharging.EndTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")
            </div>
        }
        else if (stations == null)
        {
            <div class="text-center mt-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Caricamento colonnine...</span>
                </div>
            </div>
        }
        else if (!stations.Any())
        {
            <div class="alert alert-warning mt-3">
                Nessuna colonnina trovata nella tua zona.
            </div>
        }
        else
        {
            <div style="margin-top: 10px; background: white; padding: 10px; border-radius: 5px;">
                <h6>Colonnine disponibili:</h6>
                <ul class="list-unstyled mb-0">
                    @foreach (var station in stations)
                    {
                        <li class="mb-2">
                            <span>ðŸ”Œ <b>@station.Name</b> - @station.Status</span>
                            <button class="btn btn-sm btn-primary ms-2" @onclick="() => ShowChargeDialog(station)">Ricarica</button>
                        </li>
                    }
                </ul>
            </div>
        }
        @if (showDialog && selectedStation != null)
        {
            <div class="modal show d-block" tabindex="-1" style="background:rgba(0,0,0,0.3);">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Richiedi Ricarica - @selectedStation.Name</h5>
                            <button type="button" class="btn-close" @onclick="CloseDialog"></button>
                        </div>
                        <div class="modal-body">
                            <label>Percentuale batteria attuale:</label>
                            <input type="number" class="form-control" min="0" max="100" @bind="batteryPercent" />
                            @if (!string.IsNullOrEmpty(dialogMessage))
                            {
                                <div class="alert alert-danger mt-2">@dialogMessage</div>
                            }
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" @onclick="CloseDialog">Annulla</button>
                            <button class="btn btn-success" @onclick="RequestCharge">Conferma Ricarica</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="mt-4">
            <a href="/dashboard" class="btn btn-secondary">Torna alla Dashboard</a>
        </div>
    </div>
}

@code {
    private List<ChargingStationDto>? stations;
    private ChargingRequestDto? currentCharging;
    [Inject] IJSRuntime JS { get; set; } = default!;

    private bool showDialog = false;
    private ChargingStationDto? selectedStation;
    private int batteryPercent = 50;
    private string? dialogMessage;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated || string.IsNullOrEmpty(AuthState.Token))
        {
            Navigation.NavigateTo("/login", true);
            return;
        }
        try
        {
            stations = await Api.GetStations();
            currentCharging = await Api.GetCurrentChargingRequest();
        }
        catch
        {
            stations = new List<ChargingStationDto>();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && stations != null && stations.Any())
        {
            var jsStations = stations.Select(s => new {
                name = s.Name,
                status = s.Status,
                lat = s.Latitude,
                lng = s.Longitude
            });
            var json = System.Text.Json.JsonSerializer.Serialize(jsStations);
            await JS.InvokeVoidAsync("initMap", System.Text.Json.JsonSerializer.Deserialize<object>(json));
        }
    }

    void ShowChargeDialog(ChargingStationDto station)
    {
        selectedStation = station;
        batteryPercent = 50;
        dialogMessage = null;
        showDialog = true;
    }

    void CloseDialog()
    {
        showDialog = false;
        selectedStation = null;
        dialogMessage = null;
    }

    void RequestCharge()
    {
        if (batteryPercent < 0 || batteryPercent > 100)
        {
            dialogMessage = "Inserisci una percentuale valida (0-100).";
            return;
        }
        // Qui dovresti chiamare la logica di richiesta ricarica, ad esempio navigare alla pagina Ricarica con parametri
        Navigation.NavigateTo($"/charging?stationId={selectedStation?.Id}&battery={batteryPercent}");
        showDialog = false;
    }
}
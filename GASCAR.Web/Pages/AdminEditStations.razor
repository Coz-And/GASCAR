@page "/admin/edit-stations"
@using GASCAR.Web.Services
@using GASCAR.Web.Models
@inject AuthStateService AuthState
@inject NavigationManager Navigation

@if (!AuthState.IsAuthenticated)
{
    <div class="text-center mt-5">
        <h4>Accesso richiesto</h4>
        <a href="/login" class="btn btn-primary">Accedi</a>
    </div>
}
else
{
    <div class="container mt-4">
        <h2 class="mb-4">Modifica Colonnine</h2>

        <button class="btn btn-primary mb-3" @onclick="ShowAddForm">Aggiungi Colonnina</button>

        @if (showAddForm)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Aggiungi Nuova Colonnina</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Nome</label>
                            <input type="text" class="form-control" @bind="newStation.Name" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Posizione</label>
                            <input type="text" class="form-control" @bind="newStation.Location" />
                        </div>
                        <div class="col-12">
                            <button class="btn btn-success me-2" @onclick="AddStation">Aggiungi</button>
                            <button class="btn btn-secondary" @onclick="HideAddForm">Annulla</button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Posizione</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var station in stations)
                    {
                        <tr>
                            <td>@station.Name</td>
                            <td>@station.Location</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => EditStation(station)">Modifica</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteStation(station)">Elimina</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a href="/admin" class="btn btn-secondary">Torna alla Dashboard Admin</a>
        </div>
    </div>
}

@code {

@page "/admin/edit-stations"
@using GASCAR.Web.Services
@using GASCAR.Web.Models
@inject AuthStateService AuthState
@inject ApiService Api
@inject NavigationManager Navigation

@if (!AuthState.IsAuthenticated)
{
    <div class="text-center mt-5">
        <h4>Accesso richiesto</h4>
        <a href="/login" class="btn btn-primary">Accedi</a>
    </div>
}
else
{
    <div class="container mt-4">
        <h2 class="mb-4">Colonnine (Open Charge Map)</h2>
        <div class="alert alert-info">
            Le colonnine sono sincronizzate da Open Charge Map e sono in sola lettura.
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Indirizzo</th>
                        <th>Stato</th>
                        <th>Coordinate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var station in stations)
                    {
                        <tr>
                            <td>@station.Id</td>
                            <td>@(string.IsNullOrWhiteSpace(station.Address) ? "-" : station.Address)</td>
                            <td>@(station.IsOccupied ? "Occupata" : "Disponibile")</td>
                            <td>@station.Latitude.ToString("0.0000"), @station.Longitude.ToString("0.0000")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a href="/admin" class="btn btn-secondary">Torna alla Dashboard Admin</a>
        </div>
    </div>
}

@code {
    private List<ParkingSpotDto> stations = new();

    protected override async Task OnInitializedAsync()
    {
        if (AuthState.IsAuthenticated)
        {
            stations = await Api.GetPublicStations();
        }
    }
}
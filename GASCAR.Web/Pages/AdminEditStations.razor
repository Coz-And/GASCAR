    private bool showAddForm = false;
    private ChargingStationDto newStation = new();

    protected override void OnInitialized()
    {
        // Mock data
        stations = new List<ChargingStationDto>
        {
            new ChargingStationDto { Name = "Stazione Centro", Location = "Via Roma 1" },
            new ChargingStationDto { Name = "Parcheggio Nord", Location = "Via Milano 10" },
            new ChargingStationDto { Name = "Stazione Sud", Location = "Via Napoli 5" }
        };
    }

    private void ShowAddForm()
    {
        showAddForm = true;
        newStation = new ChargingStationDto();
    }

    private void HideAddForm()
    {
        showAddForm = false;
    }

    private void AddStation()
    {
        stations.Add(new ChargingStationDto { Name = newStation.Name, Location = newStation.Location, Status = "Disponibile" });
        HideAddForm();
    }

    private void EditStation(ChargingStationDto station)
    {
        // In a real app, open edit modal
        // For demo, just show alert
        // You can implement edit functionality
    }

    private void DeleteStation(ChargingStationDto station)
    {
        stations.Remove(station);
    }
}
@inherits LayoutComponentBase

@using GASCAR.Web.Services
@inject AuthStateService Auth

<div style="min-height:100vh; background:#0f172a; color:white;">
    <nav style="display:flex; justify-content:space-between; align-items:center;
                padding:16px; background:#020617; box-shadow:0 4px 6px rgba(0,0,0,.3)">
        <h1 style="font-size:24px; font-weight:bold; color:#4ade80">
            GASCAR 
        </h1>

        <div style="display:flex; gap:16px;">
            <NavLink href="/" Match="NavLinkMatch.All">Home</NavLink>
            <NavLink href="/cars">Auto</NavLink>
            <NavLink href="/charging">Ricarica</NavLink>

            @if (Auth.IsAuthenticated)
            {
                <NavLink href="/payments">Pagamenti</NavLink>
                <button @onclick="Auth.Logout"
                        style="background:none; border:none; color:#f87171; cursor:pointer">
                    Logout
                </button>
            }
            else
            {
                <NavLink href="/login">Login</NavLink>
            }
        </div>
    </nav>

    <main style="padding:32px;">
        @Body
    </main>
</div>
